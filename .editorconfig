# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2 # Personally I'm prefer google style
trim_trailing_whitespace = true
max_line_length = 180
tab_width = 2

[*.conf]
indent_size = 2
tab_width = 2
